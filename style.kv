<WeatherCard>
    padding: 4
    size_hint: (1, 1)
    MDBoxLayout:
        orientation: "vertical"
        MDLabel:
            id: city_name_text
            text: "Місто"
            adaptive_size: True
            color: "grey"
            font_style: "H3"
        MDBoxLayout:
            orientation: "vertical"

            MDBoxLayout:
                size_hint: (1, 1)
                orientation: "horizontal"
                MDLabel:
                    id: temp_text
                    text: "22°C"
                    adaptive_size: True
                    color: "grey"
                    font_style: "H3"

                AsyncImage:
                    id: weather_icon
                    source: "https://openweathermap.org/img/wn/10d@2x.png"
                    size_hint: (None, None)
                    height: "60sp"
                    width: "60sp"

            MDLabel:
                id: feels_like_text
                text: "22°C"
                adaptive_size: True
                color: "grey"



        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                id: desc_text
                text: "поточна погода"
                adaptive_size: True
                color: "grey"

            MDLabel:
                id: rain_text
                text: "ймовірність опадів"
                adaptive_size: True
                color: "grey"

                font_style: "Caption"
            MDLabel:
                id: wind_text
                text: "Швидкість вітру"
                adaptive_size: True
                color: "grey"

                font_style: "Caption"
            MDLabel:
                id: humidity_text
                text: "Вологість"
                adaptive_size: True
                color: "grey"

                font_style: "Caption"


<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "MDTopAppBar"
            left_action_items: [["menu", lambda x: app.callback()]]
            size_hint: (1, 0.1)

        MDBoxLayout:
            padding : "20sp"
            orientation: "vertical"

            MDBoxLayout:
                size_hint: 1, None
                orientation: "horizontal"
                spading: "60sp"

                MDTextField:
                    id: city_field
                    hint_text: "Введіть місто"
                    mode: "fill"
                    height: "40sp"

                MDIconButton:
                    id: search_btn
                    icon: "magnify"
                    icon_size: "24sp"
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.primary_color
                    on_press: root.weather_search()

            MDBoxLayout:
                orientation: "horizontal"
                size_hint: 1, 1
                MDCarousel:
                    id: weather_carousel
                    direction: "right"
                    padding: 4
                    size_hint: (0.9, 0.9)

